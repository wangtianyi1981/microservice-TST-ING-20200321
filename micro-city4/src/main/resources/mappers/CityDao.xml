<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.fhit.test.microcity4.dao.CityDao">
    <resultMap id="resultMap_city" type="com.fhit.test.microcity4.entity.City">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="area" property="area"/>
    </resultMap>

    <insert id="addCity" parameterType="com.fhit.test.microcity4.entity.City">
        insert into city(id,name,area) value(#{id}, #{name}, #{area})
    </insert>

    <!--    <delete id="deleteById" parameterType="java.lang.Integer">-->
    <delete id="deleteById" parameterType="int">
        delete from city where id = #{id}
    </delete>

    <update id="updateCityById" parameterType="com.fhit.test.microcity4.entity.City">
        update city set name = #{name}, area = #{area} where id = #{id}
    </update>

    <!--    <select id="queryCities" resultType="com.fhit.test.microcity44.entity.City">-->
    <!--        select * from city-->
    <!--    </select>-->
    <select id="queryCities" resultMap="resultMap_city" resultType="com.fhit.test.microcity4.entity.City">
        select * from city
    </select>
</mapper>
